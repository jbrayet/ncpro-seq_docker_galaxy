<tool id="ncPRO-ANNOTATION" name="Annotation">
  <description>of mapped reads</description>
  <requirements>
    <container type="docker">jbrayet/ncproseq:1.6.5</container>
  </requirements>
  <command interpreter="bash">
<!-- changes :
- type and label in : <data format="bed" name="out_ucsc" label="annotation tracks (testing sens track)">
 
  -->
ncPRO-ANNOTATION.sh
  -i $input 
  -g $genome 
  -t $cond.datatype 
  -d $cond['database']
  -e $cond['database']$cond['borne']$cond['N1']"_"$cond['N2']
  -u $ucsc_track
  -n $rpm
  -l $outlog
  #if str($cond.datatype) == "matmir":
	-o $out_mirna
  #elif str($cond.datatype) == 'trna':
	-o $out_trna
  #elif str($cond.datatype) == 'premir':
	-o $out_premirna
  #elif str($cond.datatype) == 'rfam':
  	-o $out_rfam
  #elif str($cond.datatype) == 'rmsk':
	-o $out_rmsk
  #end if
  
  #if str($ucsc_track) == 'True':
	-v $out_ucsc
  #end if
  -r ${__root_dir__}
  </command>
  
  <!-- 
  DONE :
  	- added possibility of mapping against : trna, ncrna from rfam, repeat from rmasker
  	
  TODO:
  	- possibility of adding MORE than one sub-family
  	- check famlies arragements in configfile !
 

  </command>
  
  
  
